[Unit]
Description=opteron's distributed currency daemon
After=network.target

[Service]
User=opteron
Group=opteron

Type=forking
PIDFile=/var/lib/opterond/opterond.pid
ExecStart=/usr/bin/opterond -daemon -pid=/var/lib/opterond/opterond.pid \
-conf=/etc/opteron/opteron.conf -datadir=/var/lib/opterond -disablewallet

Restart=always
PrivateTmp=true
TimeoutStopSec=60s
TimeoutStartSec=2s
StartLimitInterval=120s
StartLimitBurst=5

[Install]
WantedBy=multi-user.target
